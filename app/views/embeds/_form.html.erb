<%= form_for(@embed) do |f| %>
  <% if @embed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@embed.errors.count, "error") %> prohibited this embed from being saved:</h2>

      <ul>
      <% @embed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
