    <%= f.label :app_id, 'App ID' %><br>
    <%= f.number_field :app_id %>
  </div>
  <div class="field">
    <%= f.label :webform_id, 'Webform ID' %><br>
    <%= f.number_field :webform_id %>
  </div>
  <div class="field">
    <%= f.label :environment %><br>
    <%= f.select :environment, ['production', 'staging', 'development'] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
